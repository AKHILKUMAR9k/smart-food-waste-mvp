entrypoint = "model/predictor.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["bash", "cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "pkg-config", "portaudio", "qhull", "tcl", "tk"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "model/predictor.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run Streamlit App"

[[workflows.workflow]]
name = "Run Streamlit App"
author = 44860025
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run ui/app_streamlit.py --server.address 0.0.0.0 --server.headless true --server.enableCORS=false --server.enableWebsocketCompression=false"
